{% extends "layouts/header.njk" %}
{% block main %}
  <section id="main">
    <div class="container">
      <header>
        <h2>Meus projetos ({{ projectCount }})</h2>
        <div class="addon">
          <form action="/dashboard/newproject" method="POST">
            <input type="text" name="name" placeholder="Novo projeto..." required>
            <button type="submit" class="btn">
              <img src="/img/plus.svg">
            </button>
          </form>
        </div>
      </header>
      <section id="content">
        <div class="project-list">
          {% if projects != null %}
            {% for project in projects %}
              <a href="/dashboard/{{ userId }}/project/{{ project.id }}">{{ project.name }}</a>
            {% endfor %}
          {% else %}
            <h3>Voce nao tem nenhum projeto adicionado, comece adicionando um projeto
                escolhendo um nome e clicando em "+"</h3>
          {% endif %}
        </div>
      </section>
    </div>
  </section>
{% endblock %}
